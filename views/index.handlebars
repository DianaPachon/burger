<div class="container">
    <br>
    <div class="row">
        <div class="centered">            
            <img src = "assets/img/eat_da_burger.png" alt="burger-icon">            
        </div>
        <br>
    </div>
    <br>
    <div class="row">
        <div class="centered">
            <h1>Eat-Da-Burger</h1>
        </div>
    </div>
    <br>
    <div class="row">
        <form class="form-inline create-form centered">
            <div class="form-group mx-sm-3 mb-2">
                <label for="newBurger" class="sr-only">Create your Burger</label>
                <input type="text" class="form-control" id="new-burger" placeholder="Your burger">
            </div>
            <button type="submit" class="btn btn-primary mb-2" id="post_burger">Place Order</button>
        </form>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-6" id="nonDevoured">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Let's eate!
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <tr>
                                <td>
                                    {{burger_name}}
                                </td>
                               <td>
                                    <button type="button" class="btn btn-info eatBurger" data-id="{{id}}" data-devoured="{{devoured}}">Eat da burger</button>
                                </td>
                            <tr></tr>
                        {{/unless}}
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-6" id="devoured">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            DONE
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each burgers}}
                        {{#if devoured}}
                            <tr>
                                <td>
                                    {{burger_name}} 
                                </td>
                                <td>
                                    <button type="button" class="btn btn-info eatBurger" data-id="{{id}}" data-devoured="{{devoured}}">Reorder</button>
                                </td>
                                <td>
                                    <span class="del-burger" data-id="{{id}}"><strong>X</strong></span>
                                </td>

                            <tr></tr>
                        {{/if}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>